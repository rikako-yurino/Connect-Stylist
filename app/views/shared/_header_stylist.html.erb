<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("ps-logo-color.png", class:"ps-icon"), "/" %>
    <ul class='lists-right'>
      <% if stylist_signed_in? %>
        <li><%= link_to "スタイリスト:  #{current_stylist.last_name} #{current_stylist.first_name}", edit_stylist_registration_path, class: "user-nickname"  %></li>
        <li><%= link_to 'ログアウト', destroy_stylist_session_path, method: :delete, class: "logout"  %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_stylist_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_stylist_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
    </ul>
  </div>
</header>
