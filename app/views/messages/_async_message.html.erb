<div class="message" id="message-<%= message.id %>">
  <div class="card-body msg_card_body">
     <div class="message-send message-left d-flex mb-4">
        <div class="message-frame">
            <%= image_tag message.image.variant(resize: '400x400'), class: 'message-image' if message.image.attached? %>
            <p><%= " #{message.content}" %></p>
            <span  class="time"><%= l message.created_at, format: '%H:%M' %></span>
          </div>
          <div class="img_cont_msg" >
          <% if message.user_id.present? %>
            <%= image_tag "user_photo01.png", class:"rounded-circle user_img_msg" %>
          <% elsif %>
            <%= image_tag "stylist_photo01.png", class:"rounded-circle user_img_msg" %>
          <% end %>
        </div>
      </div>
  </div>
</div>
