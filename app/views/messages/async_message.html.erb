<div class="message" id="message-<%= message.id %>">
  <div class="card-body msg_card_body">
    <div class="d-flex justify-content-start mb-4">
      <div class="img_cont_msg">
        <%= image_tag class:"rounded-circle" %>
      </div>
      <div class="msg_cotainer">
        <%= image_tag message.image.variant(resize: '400x400'), class: 'message-image' if message.image.attached? %>
          <div id="partner-message" class="message">
            <p><%= " #{message.content}" %></p>
          </div>
          <span class="msg_time"><%= l message.created_at, format: '%H:%M' %></span>
      </div>
    </div>
    <div class="d-flex justify-content-end mb-4">
      <div class="msg_cotainer_send">
        <%= image_tag message.image.variant(resize: '400x400'), class: 'message-image' if message.image.attached? %>
        <div id="my-message" class="message">
          <p><%= " #{message.content}" %></p>
        </div>
        <span class="msg_time_send" id="my-time"><%= l message.created_at, format: '%H:%M' %></span>
      </div>
      <div class="img_cont_msg">
        <%= image_tag  id:"my-photo" class:"rounded-circle" %>
      </div>
    </div>
  </div>
</div>
